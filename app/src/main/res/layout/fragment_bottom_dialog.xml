<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomDialogFragment">

    <LinearLayout
        android:id="@+id/layout_bottomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/black"
        android:orientation="vertical"
       android:padding="7dp"
        tools:ignore="Orientation">

        <TextView
            android:id="@+id/textView_bottomDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText

            android:id="@+id/editText_bottomDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9A725877"
            android:hint="@string/edit_text"
            android:padding="12dp"
            android:maxLines="1"
            android:lines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/enterButton_bottomDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="7dp"
            android:background="#9A725877"
            android:layout_gravity="right"
            android:text="@string/btn_name"
            android:clickable="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>